{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/angular-remote-data/src",
  "prefix": "betcha",
  "targets": {
    "build": {
      "executor": "@nrwl/angular:package",
      "outputs": ["dist/libs/angular-remote-data"],
      "options": {
        "project": "libs/angular-remote-data/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/angular-remote-data/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/angular-remote-data/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/angular-remote-data"],
      "options": {
        "jestConfig": "libs/angular-remote-data/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "libs/angular-remote-data/**/*.ts",
          "libs/angular-remote-data/**/*.html"
        ]
      }
    }
  },
  "tags": []
}
